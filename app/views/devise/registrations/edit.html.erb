<% content_for :head do %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag 'rails' %>
<% end %>

<div class="container">
  <section class="round">
    <h2>แก้ไขข้อมูล <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
      <%= devise_error_messages! %>

      <p><%= f.label 'ชื่อผู้ใช้'%><br />
      <%= f.text_field :user_name %></p>

      <p><%= f.label 'อีเมล'%><br />
      <%= f.email_field :email %></p>

      <p><%= f.label 'รหัสผ่าน' %><i>(ไม่ต้องใส่ข้อมูล ถ้าไม่ต้องการเปลี่ยนรหัสผ่าน)</i><br />
      <%= f.password_field :password %></p>

      <p><%= f.label 'ยืนยันรหัสผ่าน' %><br />
      <%= f.password_field :password_confirmation %></p>

      <p><%= f.label 'รหัสผ่านปัจจุบัน' %> <i>(ป้อนรหัสผ่านปัจจุบันเพื่อยืนยันการแก้ไข)</i><br />
      <%= f.password_field :current_password %></p>

      <p><%= f.submit "ปรับปรุง" %></p>
    <% end %>

    <h3>ยกเลิกสมัคร</h3>

    <p>ไม่ต้องใช้บริการแล้ว? <%= link_to "ยกเลิกสมัคร", registration_path(resource_name), :confirm => "คุณแน่ใจหรือไม่?", :method => :delete %>.</p>

    <%= link_to "Back", :back %>
  </section>
</div>
