<% content_for :head do %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag 'jquery-1.5.1.min' %>
  <%= javascript_include_tag 'jquery-ui-1.8.12.custom.min.js' %>
  <%= stylesheet_link_tag 'Aristo/jquery-ui-1.8.7.custom.css', :media => 'screen' %>
  <%= javascript_include_tag 'jquery_ujs' %>
<% end %>
<div class="container">
  <section class="round">
    <h2>รายการจดจำ (แก้ไข)</h2>
    <b><%= bookmark_header(@bookmark.page.id, @bookmark.item_number) %></b>
    <% form_for(@bookmark) do |f| %>
      <div class="field">
        <%= f.text_area :note %>
      </div>
      <br />
      <div class="actions">
        <%= f.submit "ปรับปรุง" %>
      </div>
    <% end %>
  </section>
</div>
