<% content_for :head do %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag 'rails' %>
<% end %>
<%= render 'search_bar' %>
<% flash.each do |key, value| %>
  <div class="flash <%= key %>"><%= value %></div>
<% end %>
<div class="results_info">
  <%= render :partial => 'results_info' unless @pages.nil? or @pages.empty? %>
</div>
<div class="results">
  <% unless @pages.nil? or @pages.empty? %>
    <%= will_paginate(@pages,:renderer => 'MyLinkRenderer',
                             :next_label => '→',
                             :previous_label => '←')%>
    <table class="results" summary="Search results">
      <%= render @pages %>
    </table>
    <%= will_paginate(@pages,:renderer => 'MyLinkRenderer',
                             :next_label => '→',
                             :previous_label => '←')%>
  <% end %>
</div>
