<% content_for :head do %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag 'jquery-1.4.3.min' %>
  <%= javascript_include_tag 'splitter' %>
  <%= javascript_include_tag 'splitter_config_for_compare' %>
  <%= stylesheet_link_tag 'splitter_for_compare', :media => 'screen' %>
<% end %>

<div id="splitterContainer">
  <div id="leftPane">
    <div class="left_title">
      <h2 class="book_title">
        <%= @titles1[0] %>
      </h2>
      <h2 class="book_title">
        <%= @titles2[0] %>
      </h2>
    </div>
    <div class="position">
      <span class="page_info">
        <%= @page_number_info[0] %>
      </span>
      <span class="item_info">
        <%= @item_number_info[0] %>
      </span>
    </div>
    <div class="turn_page_bar">
      <%= render :partial => 'turn_page_bar', 
                 :locals => { :languages => @languages, 
                              :target => 0,
                              :pages => @pages,
                              :volume => @volume } %>
    </div>
    <div class="content">
      <%= render :partial => 'content', :locals => { :content => @contents[0] } %>
    </div>
    <div class="turn_page_bar">
      <%= render :partial => 'turn_page_bar', 
                 :locals => { :languages => @languages, 
                              :target => 0,
                              :pages => @pages,
                              :volume => @volume } %>
    </div>
  </div>
  <div id="rightPane">
    <div class="right_title">
      <h2 class="book_title">
        <%= @titles1[1] %>
      </h2>
      <h2 class="book_title">
        <%= @titles2[1] %>
      </h2>
    </div>
    <div class="position">
      <span class="page_info">
        <%= @page_number_info[1] %>
      </span>
      <span class="item_info">
        <%= @item_number_info[1] %>
      </span>
    </div>
    <div class="turn_page_bar">
      <%= render :partial => 'turn_page_bar', 
                 :locals => { :languages => @languages, 
                              :target => 1,
                              :pages => @pages,
                              :volume => @volume } %>
    </div>
    <div class="content">
      <%= render :partial => 'content', :locals => { :content => @contents[1] } %>
    </div>
    <div class="turn_page_bar">
      <%= render :partial => 'turn_page_bar', 
                 :locals => { :languages => @languages, 
                              :target => 1,
                              :pages => @pages,
                              :volume => @volume } %>
    </div>
  </div>
</div>

