<pre class="content">
<% if !@content.nil? and !@keywords.nil? %>
<%=highlight(@content.gsub("\t",'&nbsp;'*3).gsub("\n",'<br/>'), 
                  @keywords.split.each { |keyword| keyword.gsub('+',' ') })%>
<% elsif !@content.nil? and @keywords.nil? %>
<%= raw @content.gsub("\t",'&nbsp;'*3).gsub("\n",'<br/>')%>
<% end %>
</pre>
